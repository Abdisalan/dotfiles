[colors]
background = #373e4a
foreground = #30363636
active = #ffaa00
inactive = #b87a00
urgent = #ed4539
text = #ffffff

[bar/bar1]
modules-center = title filesystem date
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
ipc = true
font-0 = "xos4 Terminus:style=Regular:size=8;1"
line-size = 3
background = ${colors.background}
foreground = ${colors.text}
offset-x = 32
offset-y = 4
module-margin-left = 1

[module/filesystem]
type = internal/fs
format-mounted = <label-mounted>
label-mounted =  %mountpoint% %percentage_free%%
mount-0 = /
label-mounted-underline = ${colors.inactive}
spacing = 1

[module/date]
format-foreground =  ${colors.text}
format-underline = #0a6cf5
label = %time%
type = internal/date
time-alt = %Y-%m-%d%
time = %l:%M:%S
label-active = $font-0$
interval = 1.0
format-padding = 2
label-layout-padding = 2

[module/title]
type = internal/xwindow
format = <label>
format-foreground = ${colors.text}
format-padding = 4
